{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "dockerfilePath": null,
    "buildCommand": "pnpm install --no-frozen-lockfile && pnpm --filter api exec prisma generate && pnpm --filter api build"
  },
  "deploy": {
    "startCommand": "cd api && PORT=$PORT node dist/main.js",
    "healthcheckPath": "/health/simple",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
