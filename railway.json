{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "dockerfilePath": null
  },
  "deploy": {
    "startCommand": "PORT=$PORT node dist/main.js",
    "healthcheckPath": "/health/simple",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
